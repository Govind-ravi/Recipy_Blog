<section class="m-auto mx-4 mb-10">
    <div class="flex justify-between items-center ">
        <h1 class="font-bold text-xl mb-3">Here is a random recipe</h1>
    </div>
    <div class="">

        <% if(recipe !='' ){ %>
                <a href="/recipe/<%= recipe._id %>" class="h-60 text-center hover:scale-105 transition-all">
                    <div class="flex ">
                        <img class="h-60 w-52 object-cover overflow-hidden rounded" src="/uploads/<%- recipe.image %>"
                            alt="<%- recipe.name %>">
                    </div>
                    <div class="w-48">
                        <%- recipe.name %>
                    </div>
                </a>
                    <% } %>

    </div>
</section>